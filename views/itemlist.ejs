<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LIST APP</title>
    <link rel="stylesheet" href="/css/style2.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a href="/" class="header-logo">LIST APP</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>カテゴリリスト</h1>
        <a href="/new" class="new-button">+ 新規登録</a>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span class="id-column">ID</span>
          <span>カテゴリ</span>
        </div>
        <ul class="table-body">
          <% categorys.forEach((category) => { %>
            <li>
              <div class="category-data">
                <span class="id-column"><%= category.id %></span>
                <span class="name-column"><%= category.name %></span>
              </div>
              <div class="category-menu">
                <a href="/new/<%= category.id %>" class="new-button">+サブ登録</a>
                <a href="/edit/<%= category.id %>"><span class="fa fa-edit"></span></a>
                <a href="/delete/<%= category.id %>"><span class="fa fa-trash"></span></a>
                <a href="#"><span class="fa fa-bars menu-icon"></span></a>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </body>
</html>