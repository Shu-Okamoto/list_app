<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LIST APP</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a href="/" class="header-logo">LIST APP</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>リスト</h1>
        <a href="/new" class="new-button">+ 新規登録</a>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span class="id-column">ID</span>
          <span>カテゴリ</span>
        </div>
        <ul class="table-body">
          <% categorys.forEach((category) => { %>
            <li>
              <div class="category-data">
                <span class="id-column"><%= category.id %></span>
                <span class="name-column"><%= category.name %></span>
              </div>
              <div class="category-menu">
                <a href="/new/<%= category.id %>">サブカテゴリ登録</a>   
                <form action="/delete/<%= category.id %>" method="post">
                  <input type="submit" value="削除">
                </form>
                <a href="/edit/<%= category.id %>">編集</a>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </body>
</html>